.detail-start{
  position: relative;
}
.detail-contailer{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: .4;
}
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top:0;
  left: 0;
  z-index: -1;
}
.detail-img{
  width: 280rpx;
  height: 400rpx;
  position: absolute;
  left: 0rpx;
  top:0rpx;
}
.detail{
  position: absolute;
  left: 300rpx;
  top: 10rpx;
}
input{
  border: 1rpx solid rgb(224, 227, 236);
  width: 100%;
  align-self: center;
  margin: 0.5vh;
  height: 5vh;
}

.rate_score{
  display: block;
}

.video-player{
  left: 20rpx;
  width: 100%;
  height:400rpx;
  margin:1rpx;
}
.video-out{
  position: relative;
  left: 0rpx;
  top: 100%;
}
